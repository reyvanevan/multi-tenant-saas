# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL="postgresql://postgres:yourpassword@localhost:5432/yourdatabase?schema=public"

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate strong secrets using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"

# Token expiration times
JWT_EXPIRATION="15m"           # Access token expires in 15 minutes
JWT_REFRESH_EXPIRATION="7d"    # Refresh token expires in 7 days

# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV="development"         # development | production | test
PORT=3000
API_PREFIX="/api/v1"

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGIN="http://localhost:5174,http://localhost:3000"

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
MAX_FILE_SIZE=5242880          # 5MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/jpg"
UPLOAD_DIRECTORY="./uploads"

# ============================================
# PAGINATION DEFAULTS
# ============================================
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# ============================================
# RATE LIMITING (Optional)
# ============================================
RATE_LIMIT_TTL=60000          # Time window in milliseconds
RATE_LIMIT_MAX=100            # Max requests per window

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL="debug"             # error | warn | info | debug | verbose
LOG_FILE_ENABLED="true"
LOG_FILE_PATH="./logs"

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_SECURE="false"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# EMAIL_FROM="noreply@yourdomain.com"

# ============================================
# CLOUD STORAGE (Optional - AWS S3)
# ============================================
# AWS_REGION="us-east-1"
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_S3_BUCKET="your-bucket-name"

# ============================================
# REDIS CONFIGURATION (Optional - for caching)
# ============================================
# REDIS_HOST="localhost"
# REDIS_PORT=6379
# REDIS_PASSWORD="your-redis-password"
# REDIS_DB=0

# ============================================
# SWAGGER DOCUMENTATION
# ============================================
SWAGGER_ENABLED="true"
SWAGGER_PATH="/api/docs"
SWAGGER_TITLE="NestJS Multi-Tenant SaaS API"
SWAGGER_DESCRIPTION="API Documentation for Multi-Tenant SaaS Backend"
SWAGGER_VERSION="1.0"

# ============================================
# TIMEZONE
# ============================================
TZ="Asia/Jakarta"             # Your server timezone

# ============================================
# SECURITY
# ============================================
BCRYPT_SALT_ROUNDS=10         # Higher = more secure but slower

# ============================================
# BUSINESS CONFIGURATION
# ============================================
DEFAULT_CURRENCY="IDR"
DEFAULT_LANGUAGE="id"
LOW_STOCK_THRESHOLD=10

# ============================================
# SUBSCRIPTION LIMITS (Default values)
# ============================================
# These can be overridden per subscription plan
MAX_OUTLETS_BASIC=1
MAX_OUTLETS_PRO=5
MAX_OUTLETS_ENTERPRISE=999

MAX_USERS_BASIC=5
MAX_USERS_PRO=25
MAX_USERS_ENTERPRISE=999

MAX_PRODUCTS_BASIC=100
MAX_PRODUCTS_PRO=1000
MAX_PRODUCTS_ENTERPRISE=999999

# ============================================
# DEVELOPMENT/DEBUG
# ============================================
# Enable query logging in development
PRISMA_QUERY_LOG="false"      # Set to "true" to see SQL queries

# ============================================
# DOCKER CONFIGURATION (for docker-compose)
# ============================================
# DB_PASSWORD="postgres"
# DB_NAME="saas_db"
# PGADMIN_EMAIL="admin@admin.com"
# PGADMIN_PASSWORD="admin"
